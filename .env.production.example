# ===========================================
# PRODUCTION CONFIGURATION EXAMPLE
# ===========================================
# Copy this file to .env and update the values

# --- DOMAIN & PORT ---
# Ganti dengan domain Anda (dengan https://)
APP_URL=https://knowledge.yourdomain.com
PORT=3000

# --- KEAMANAN ---
# Generate random 32+ character string
# Command: openssl rand -hex 32
APP_SECRET=your-random-secret-key-here
JWT_TOKEN_EXPIRES_IN=30d

# --- DATABASE ---
# Ganti 'your-strong-password' dengan password yang kuat
DATABASE_URL="postgresql://docmost:your-strong-password@db:5432/docmost?schema=public"
DB_PASSWORD=your-strong-password

# --- CACHE ---
REDIS_URL=redis://redis:6379

# --- PENYIMPANAN ---
STORAGE_DRIVER=local
FILE_UPLOAD_SIZE_LIMIT=50mb

# --- SMTP (Optional) ---
# Konfigurasi email untuk notifikasi
MAIL_DRIVER=smtp
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="Your Knowledge Base"
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_SECURE=false
SMTP_IGNORETLS=false

# --- LAINNYA ---
DISABLE_TELEMETRY=true
DEBUG_MODE=false
